{
  "name": "solar-store",
  "version": "1.0.0",
  "description": "Solar energy e-commerce platform with admin dashboard",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "db:seed": "node scripts/seed.js",
    "db:admin-seeder": "node scripts/admin-seeder.js",
    "db:products-seeder": "node scripts/seed-products.js",
    "db:seed-all": "npm run db:admin-seeder && npm run db:products-seeder",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "check": "npm run lint && npm run build && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tinymce/tinymce-react": "^6.3.0",
    "aws-sdk": "^2.1693.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "bulma": "^0.9.4",
    "connect-mongo": "^3.2.0",
    "express-session": "^1.17.3",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "next": "^16.1.6",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.13",
    "pdfkit": "^0.13.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "sweetalert2": "^11.26.20",
    "twilio": "^4.10.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/express-session": "^1.17.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.11",
    "@types/pdfkit": "^0.12.10",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.0",
    "eslint-config-next": "^16.1.6",
    "husky": "^9.1.7",
    "mongodb-memory-server": "^11.0.1",
    "playwright": "^1.58.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3"
  }
}
